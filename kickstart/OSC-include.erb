]

if @host.hostgroup.present? &&
  ((@nfsroot_ro_hostgroups.include?(@host.hostgroup.to_s) || @nfsroot_ro_hosts.include?(@host.name)) ||
    (@nfsroot_rw_hostgroups.include?(@host.hostgroup.to_s) && ! @host.build?))
